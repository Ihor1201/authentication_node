textShadow()
	text-shadow: -1px 1px 0 white
	-moz-text-shadow: -1px 1px 0 white
	-webkit-text-shadow: -1px 1px 0 white

html, body 
	margin: 0
	padding: 0
	height: 100%
	user-select: none
	
// login page //	
    
#login-container{
    width 340px
    margin 180px auto
    #subheading{
		color #777
		textShadow()		
		margin-top 3px
	}
	label{
		color grey
		textShadow()
		margin 15px 0 5px 5px
	}
	#btn-login{
		width 150px
		padding 6px 40px 6px 40px
		float left
		margin-top 15px
	}
	#remember-me{
		margin 23px 0 0 180px    
	}
	#btm-links{
		text-align center
		margin-top 10px
	}
	#forgot-pass{
		float:left
		margin-left:10px
	}
	#create-account{
		float:right
		margin-right:13px        
	}
}
    
// logged-in page //    
    
#btn-logout
	width 100px
	top 1px
	right 8px
	position absolute
    
